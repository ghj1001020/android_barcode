<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Barcode" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" />

    <!-- 탭 -->
    <style name="TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">@color/tab_gray</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 텍스트뷰 -->
    <style name="BaseText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TxtDialogTitle" parent="BaseText">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TxtDialogMessage" parent="BaseText">
        <item name="android:textSize">19dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TxtFileName" parent="BaseText">
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TxtDate" parent="BaseText">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TxtValue" parent="BaseText">
        <item name="android:textSize">19dp</item>
    </style>


    <!-- 입력상자 -->
    <style name="BaseEdit" parent="BaseText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>


    <!-- 버튼 -->
    <style name="BaseBtn">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BtnDialog" parent="BaseBtn">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnPlain" parent="BaseBtn">
        <item name="android:textSize">13dp</item>
    </style>

</resources>